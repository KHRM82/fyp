    <main class="container">
      <!-- Disease 1: Rust -->
      <section id="rust" class="mb-5">
        <h2 class="section-title">Rust</h2>
        <div class="card">
          <div class="row no-gutters">
            <div class="col-md-4">
              <img
                src="/images/wheat_rust.jpg"
                alt="Rust on Wheat"
                class="disease-img"
              />
            </div>
            <div class="col-md-8">
              <div class="card-body">
                <h3>Symptoms</h3>
                <p>Yellowish-orange pustules on leaves.</p>
                <h3>Best Practices to Control Rust</h3>
                <ul>
                  <li>Use disease-resistant varieties.</li>
                  <li>Apply fungicides as per recommendations.</li>
                  <li>Ensure proper crop rotation.</li>
                </ul>
              </div>
            </div>
          </div>
        </div>
      </section>

      <!-- Disease 2: Smut -->
      <section id="smut" class="mb-5">
        <h2 class="section-title">Smut</h2>
        <div class="card">
          <div class="row no-gutters">
            <div class="col-md-4">
              <img
                src="/images/wheat_smut.jpg"
                alt="Smut on Wheat"
                class="disease-img"
              />
            </div>
            <div class="col-md-8">
              <div class="card-body">
                <h3>Symptoms</h3>
                <p>Black powdery masses on kernels.</p>
                <h3>Best Practices to Control Smut</h3>
                <ul>
                  <li>Regular monitoring of fields.</li>
                  <li>Use certified seeds treated with fungicides.</li>
                  <li>Practice crop rotation and deep plowing.</li>
                </ul>
              </div>
            </div>
          </div>
        </div>
      </section>

      <!-- Disease 3: Blight -->
      <section id="blight" class="mb-5">
        <h2 class="section-title">Blight</h2>
        <div class="card">
          <div class="row no-gutters">
            <div class="col-md-4">
              <img
                src="/images/wheat_blight.jpg"
                alt="Blight on Wheat"
                class="disease-img"
              />
            </div>
            <div class="col-md-8">
              <div class="card-body">
                <h3>Symptoms</h3>
                <p>Yellowing and blighting of leaves, fungal growth.</p>
                <h3>Best Practices to Control Blight</h3>
                <ul>
                  <li>Apply fungicides early in the infection.</li>
                  <li>Remove and destroy infected plants.</li>
                  <li>Ensure proper field sanitation.</li>
                </ul>
              </div>
            </div>
          </div>
        </div>
      </section>

      <!-- Disease 4: Powdery Mildew -->
      <section id="powdery-mildew" class="mb-5">
        <h2 class="section-title">Powdery Mildew</h2>
        <div class="card">
          <div class="row no-gutters">
            <div class="col-md-4">
              <img
                src="/images/wheat_powdery_mildew.jpg"
                alt="Powdery Mildew on Wheat"
                class="disease-img"
              />
            </div>
            <div class="col-md-8">
              <div class="card-body">
                <h3>Symptoms</h3>
                <p>White, powdery fungal growth on leaves and stems.</p>
                <h3>Best Practices to Control Powdery Mildew</h3>
                <ul>
                  <li>Apply sulfur-based fungicides.</li>
                  <li>Ensure proper air circulation.</li>
                  <li>Remove and destroy infected plant parts.</li>
                </ul>
              </div>
            </div>
          </div>
        </div>
      </section>

      <!-- Disease 5: Septoria Leaf Blotch -->
      <section id="septoria-leaf-blotch" class="mb-5">
        <h2 class="section-title">Septoria Leaf Blotch</h2>
        <div class="card">
          <div class="row no-gutters">
            <div class="col-md-4">
              <img
                src="/images/wheat_septoria_leaf_blotch.jpg"
                alt="Septoria Leaf Blotch on Wheat"
                class="disease-img"
              />
            </div>
            <div class="col-md-8">
              <div class="card-body">
                <h3>Symptoms</h3>
                <p>
                  Small, yellowish-brown spots on leaves, often with a yellow
                  halo.
                </p>
                <h3>Best Practices to Control Septoria Leaf Blotch</h3>
                <ul>
                  <li>Apply fungicides at the first sign of disease.</li>
                  <li>Practice crop rotation with non-host crops.</li>
                  <li>Remove plant debris after harvest.</li>
                </ul>
              </div>
            </div>
          </div>
        </div>
      </section>

      <!-- Disease 6: Fusarium Head Blight -->
      <section id="fusarium-head-blight" class="mb-5">
        <h2 class="section-title">Fusarium Head Blight</h2>
        <div class="card">
          <div class="row no-gutters">
            <div class="col-md-4">
              <img
                src="/images/wheat_fusarium_head_blight.jpg"
                alt="Fusarium Head Blight on Wheat"
                class="disease-img"
              />
            </div>
            <div class="col-md-8">
              <div class="card-body">
                <h3>Symptoms</h3>
                <p>
                  Bleached spikelets on heads, pink or orange mold at the base
                  of spikelets.
                </p>
                <h3>Best Practices to Control Fusarium Head Blight</h3>
                <ul>
                  <li>Use resistant varieties.</li>
                  <li>Apply fungicides at early flowering.</li>
                  <li>Practice crop rotation and tillage.</li>
                </ul>
              </div>
            </div>
          </div>
        </div>
      </section>

      <!-- Disease 7: Common Bunt -->
      <section id="common-bunt" class="mb-5">
        <h2 class="section-title">Common Bunt</h2>
        <div class="card">
